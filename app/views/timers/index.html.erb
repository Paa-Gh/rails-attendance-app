<h1 class="text-white">My Attendance Records</h1>
<br>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Date</th>
      <th>Time In</th>
      <th>Time Out</th>
      <th>Work Duration (mins)</th>

    </tr>
  </thead>

  <tbody>
    <% @timers.each do |timer| %>
      <tr>
        <td><%= timer.time_in.strftime("%d, %b %Y") %></td>
        <td><%= timer.time_in.strftime("%I:%M %p") %></td>
        <td><%= timer.time_out.strftime("%I:%M %p") %></td>
        <td><%= ((timer.time_out - timer.time_in)/1.minute).round if timer.time_out %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Back to Clocker', employee_path(current_user.employee), class:"btn btn-warning" %>
